{
  "name": "app",
  "version": "1.0.0",
  "private": true,
  "main": "index.js",
  "scripts": {
    "start": "npm-run-all app:clear build app:start",
    "start:watch": "nodemon",
    "build": "tsc",
    "app:start": "node dist/app.js",
    "app:clear": "rimraf ./dist"
  },
  "devDependencies": {
    "@types/express": "^4.17.9",
    "nodemon": "^2.0.6",
    "rimraf": "^3.0.2",
    "tslint": "^6.1.3",
    "typescript": "^4.0.5"
  },
  "dependencies": {
    "body-parser": "^1.19.0",
    "express": "^4.17.1",
    "npm-run-all": "^4.1.5"
  },
  "nodemonConfig": {
    "ignore": [
      "**/*.test.ts",
      "**/*.spec.ts",
      ".git",
      "node_modules"
    ],
    "watch": ["src"],
    "exec": "npm start",
    "ext": "ts"
  }
}
